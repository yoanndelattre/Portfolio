{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        "require-jsdoc": 0,
        "no-invalid-this": 0,
        "react/prop-types": 0,
        "babel/no-invalid-this": 1,
        "max-len": [
            "error", { 
                "ignoreStrings": true 
            }
        ]
    }
}